generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Barbershop {
  id          String              @id @default(uuid())
  name        String
  address     String
  description String
  imageUrl    String
  phones      String[]
  services    BarbershopService[]
}

model BarbershopService {
  id           String     @id @default(uuid())
  name         String
  description  String
  barbershopId String
  priceInCents Int
  imageUrl     String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id], onDelete: Cascade)
}
